<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rdb="http://www.dangdang.com/schema/ddframe/rdb"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	   http://www.dangdang.com/schema/ddframe/rdb
	   http://www.dangdang.com/schema/ddframe/rdb/rdb.xsd">
    <!--数据源0-->
    <bean name="ds_0" parent="defaultDataSource">
        <property name="url" value="${datasource.url.0}"/>
        <property name="username" value="${datasource.user.0}"/>
        <property name="password" value="${datasource.password.0}"/>
    </bean>
    <!--数据源1-->
    <bean name="ds_1" parent="defaultDataSource">
        <property name="url" value="${datasource.url.1}"/>
        <property name="username" value="${datasource.user.1}"/>
        <property name="password" value="${datasource.password.1}"/>
    </bean>
    <!--数据源2-->
    <bean name="ds_2" parent="defaultDataSource">
        <property name="url" value="${datasource.url.2}"/>
        <property name="username" value="${datasource.user.2}"/>
        <property name="password" value="${datasource.password.2}"/>
    </bean>
    <!--数据源3-->
    <bean name="ds_3" parent="defaultDataSource">
        <property name="url" value="${datasource.url.3}"/>
        <property name="username" value="${datasource.user.3}"/>
        <property name="password" value="${datasource.password.3}"/>
    </bean>
    <!-- Sharding 数据源 -->
    <rdb:data-source id="dataSource">
        <rdb:sharding-rule data-sources="defaultDataSource,ds_0,ds_1,ds_2,ds_3"
                           default-data-source="defaultDataSource">
            <rdb:table-rules>
                <rdb:table-rule logic-table="positions"
                                actual-tables="${positions.table.names}"
                                database-strategy="positionDatabaseStrategy"
                                table-strategy="positionTableStrategy"/>
            </rdb:table-rules>
            <rdb:default-database-strategy sharding-columns="none"
                                           algorithm-class="com.dangdang.ddframe.rdb.sharding.api.strategy.database.NoneDatabaseShardingAlgorithm"/>
        </rdb:sharding-rule>
        <rdb:props>
            <prop key="metrics.enable">false</prop>
        </rdb:props>
    </rdb:data-source>

    <rdb:strategy id="positionDatabaseStrategy"
                  sharding-columns="device_id"
                  algorithm-class="sample.demo.netty.data.service.impl.mybtatis.sharding.PositionDatabaseStrategy"/>
    <rdb:strategy id="positionTableStrategy"
                  sharding-columns="device_id,time"
                  algorithm-class="sample.demo.netty.data.service.impl.mybtatis.sharding.PositionTableStrategy"/>

</beans>


